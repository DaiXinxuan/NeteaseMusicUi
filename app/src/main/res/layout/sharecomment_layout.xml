<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/comment_part"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/comment_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        tools:text="只有我不在的街道，美好的事还在继续！！！仆街超带感神曲。。。"/>
    <FrameLayout
        android:layout_below="@+id/comment_text"
        android:layout_marginTop="@dimen/padding_standard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/one_picture_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/one_picture_img"
                android:layout_width="match_parent"
                android:layout_height="160dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/two_pictures_ll"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/two_pictures_first"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:layout_marginRight="@dimen/padding_small"
                android:layout_height="120dp"
                tools:src="@mipmap/sample5" />

            <ImageView
                android:id="@+id/two_pictures_second"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:layout_height="120dp"
                tools:src="@mipmap/sample5" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/three_pictures_ll"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/three_pictures_first"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:layout_marginRight="@dimen/padding_small"
                android:layout_height="120dp"
                tools:src="@mipmap/sample5" />

            <ImageView
                android:id="@+id/three_pictures_second"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:layout_marginRight="@dimen/padding_small"
                android:layout_height="120dp"
                tools:src="@mipmap/sample5" />

            <ImageView
                android:id="@+id/three_pictures_third"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:layout_height="120dp"
                tools:src="@mipmap/sample5" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/four_pictures_ll"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_small"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/four_pictures_first"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:layout_marginRight="@dimen/padding_small"
                    android:layout_height="120dp"
                    tools:src="@mipmap/sample5" />

                <ImageView
                    android:id="@+id/four_pictures_second"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:layout_height="120dp"
                    tools:src="@mipmap/sample5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/four_pictures_third"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:layout_marginRight="@dimen/padding_small"
                    android:layout_height="120dp"
                    tools:src="@mipmap/sample5" />

                <ImageView
                    android:id="@+id/four_pictures_fourth"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:layout_height="120dp"
                    tools:src="@mipmap/sample5" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>
</RelativeLayout>