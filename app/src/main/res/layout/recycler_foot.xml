<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/padding_large"
        android:layout_height="0.2dp"
        android:background="@color/navigation_back"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_large"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="70dp">

        <TextView
            android:id="@+id/adjusttxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:textSize="11sp"
            android:text="@string/adjust"/>

        <TextView
            android:layout_below="@+id/adjusttxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_standard"
            android:layout_centerHorizontal="true"
            android:paddingLeft="@dimen/padding_large"
            android:paddingRight="@dimen/padding_large"
            android:paddingTop="@dimen/padding_small"
            android:paddingBottom="@dimen/padding_small"
            android:text="@string/adjust_btn"
            android:textColor="@color/actionBarColor"
            android:background="@drawable/adjust_bg"/>

    </RelativeLayout>

</LinearLayout>