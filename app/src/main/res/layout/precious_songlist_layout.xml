<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="@dimen/padding_small"
    android:layout_marginRight="@dimen/padding_small"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_icon"
        tools:src="@mipmap/sample2"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <RelativeLayout
        android:padding="@dimen/padding_standard"
        android:layout_weight="3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/small_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/tux_g"/>
        <TextView
            android:id="@+id/precious_list"
            android:layout_toRightOf="@+id/small_icon"
            android:layout_marginLeft="@dimen/padding_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/precious_list"
            android:textColor="@color/textColor"/>
        <TextView
            android:id="@+id/songList_des"
            android:layout_below="@+id/small_icon"
            android:layout_marginTop="@dimen/padding_standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="[造语者] 穿透灵魂 如唱诗般空灵唯美"
            android:textSize="12sp"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_weight="2"
        android:layout_gravity="center_vertical|right"
        android:src="@mipmap/arrow"
        />

</LinearLayout>