<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/padding_standard"
    android:paddingLeft="@dimen/padding_small"
    android:paddingRight="@dimen/padding_small"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/padding_standard"
        app:cardElevation ="12dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/music_img1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                tools:src="@mipmap/sample5"/>
            <TextView
                android:id="@+id/music_des1"
                android:layout_marginTop="@dimen/padding_small"
                android:layout_below="@+id/music_img1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="12sp"
                tools:text="那些只听前奏就中毒的英文歌"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small"
        android:layout_marginRight="@dimen/padding_standard"
        app:cardElevation ="12dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/music_img2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                tools:src="@mipmap/sample5"/>
            <TextView
                android:id="@+id/music_des2"
                android:layout_marginTop="@dimen/padding_small"
                android:layout_below="@+id/music_img2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="12sp"
                tools:text="那些只听前奏就中毒的英文歌"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small"
        app:cardElevation ="12dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/music_img3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                tools:src="@mipmap/sample5"/>
            <TextView
                android:id="@+id/music_des3"
                android:layout_marginTop="@dimen/padding_small"
                android:layout_below="@+id/music_img3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:singleLine="true"
                tools:text="那些只听前奏就中毒的英文歌"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>